<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
tools:context=".ActivitySub" >

<!-- Tiêu đề -->
<TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Karaoke Việt Nam"
    android:textSize="24sp"
    android:textStyle="bold"
    android:paddingBottom="16dp" />

<!-- TableLayout để hiển thị thông tin bài hát -->
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <!-- Mã số -->
    <TableRow>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtmaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã số"
            android:textSize="18sp" />
    </TableRow>

    <!-- Tên bài hát -->
    <TableRow>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát:"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHÉN ĐÁNG (REMIX)"
            android:textSize="18sp" />
    </TableRow>

    <!-- Lời bài hát -->
    <TableRow>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lời bài hát:"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtloibaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Một ngày anh nhớ, nhớ bóng hình em, trái tim..."
            android:textSize="18sp" />
    </TableRow>

    <!-- Tác giả -->
    <TableRow>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tác giả:"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txttacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trương Lê Sơn"
            android:textSize="18sp" />
    </TableRow>

    <!-- Yêu thích -->
    <TableRow>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu thích:"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Nút yêu thích -->
            <ImageButton
                android:id="@+id/btnthich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Yêu thích" />

            <!-- Nút không thích -->
            <ImageButton
                android:id="@+id/btnkhongthich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Không thích" />
        </LinearLayout>
    </TableRow>
</TableLayout>
</LinearLayout>